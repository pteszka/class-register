@model ClassRegister.Models.ClassDTO

@{
    ViewData["Title"] = "Create Class";
}

<h1>Create Class</h1>
<hr />
<form asp-action="CreateClass">
    <div class="form-row">
        <div class="form-group col-4">
            <input asp-for="Grade" class="form-control" placeholder="Enter Grade" />
            <span asp-validation-for="Grade" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <input asp-for="Letter" class="form-control" placeholder="Enter Letter" />
            <span asp-validation-for="Letter" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" name="Add Class" value="Create" class="btn btn-primary" />
    </div>
</form>
